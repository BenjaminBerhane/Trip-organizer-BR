import { createSlice } from "@reduxjs/toolkit";

const initialState = {
  trips: [],
};

const tripSlice = createSlice({
  name: 'trips',
  initialState,
  reducers: {
    addTrip: (state, action) => {
      state.trips.push(action.payload);
    },
  },
});

export const { addTrip } = tripSlice.actions;

export default tripSlice.reducer;
  